    <body>
        {% if page.hideHeader is empty %}
            <nav class="navbar">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" id="navbar-toggle">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
